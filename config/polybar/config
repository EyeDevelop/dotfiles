modules-left = i3
modules-right = cpu memory

[module/backlight]
type = internal/backlight
card = intel_backlight
format = Brightness:  <bar>

bar-width = 10
bar-indicator = |
bar-indicator-font = 3
bar-indicator-foreground = #ff
bar-fill = ─
bar-fill-font = 3
bar-fill-foreground = #c9665e
bar-empty = ─
bar-empty-font = 3
bar-empty-foreground = #44

[module/battery]
type = internal/battery
full-at = 98

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-discharging = Battery:  V | %{F#fba922}%percentage%% %{F#999}| %time%
label-charging = Battery:  ^ | %{F#fba922}%percentage%%
label-full = Battery full

bar-capacity-width = 10
bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
bar-capacity-fill = █
bar-capacity-fill-foreground = #ddffffff
bar-capacity-fill-font = 3
bar-capacity-empty = █
bar-capacity-empty-font = 3
bar-capacity-empty-foreground = #44ffffff

[module/i3]
type = internal/i3

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

pin-workspaces = true
strip-wsnumbers = false
enable-click = false
enable-scroll = false

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #ffd700
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-foreground = #ffffff
label-unfocused-padding = 4

label-urgent = %index%
label-urgent-foreground = #ffffff
label-urgent-background = #ff0000
label-urgent-padding = 4

[module/date]
type = internal/date
date = %%{F#99}%d-%m-%Y%%{F-}  %%{F#fff}%H:%M%%{F-}
date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M:%%{F#fba922}%S

